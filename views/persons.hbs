<section class="aboutus margin-top-120" id="aboutus">|
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="head_title text-center margin-top-80">
                    <div class="col-md-4">

                        <form id="persons" action="/persons" method="post">
                            <input list="personsFA" name="personsFA" required>
                            <datalist id="personsFA">
                                    <option value="1">Famille d'accueil</option>
                                    <option value="0">Membre</option>
                            </datalist>
                            <input type="submit" style="background-color:#9acfea"  value="FA or not FA">
                        </form></div>
                </div>
                <!-- End of head title-->
                <div>
                    <table class="table">
                        <thead>
                        <!-- En-tÃªte du tableau-->
                        <tr style="text-align: center">
                            <th scope="col">Nom</th>
                            <th scope="col">Pr&eacute;nom</th>
                            <th scope="col">facebook</th>
                            <th scope="col" data-type="date" data-format-string="DD MMMM YYYY">Date de naissance</th>
                            <th scope="col">Adresse</th>
                            <th scope="col">Maison</th>
                            <th scope="col">Portable</th>
                            <th scope="col">lieu</th>
                            <th scope="col">email</th>
                            <th scope="col">bloque</th>
                            <th scope="col">pr&eacute;visite FA</th>
                            <th scope="col">FA</th>
                            <th scope="col">Statuts</th>
                            <th scope="col">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <!-- data-->
                        {{#each persons}}
                            <tr>
                                <td>{{this.nomP}}</td>
                                <td>{{this.prenomP}}</td>
                                <td>{{this.facebookP}}</td>
                                <td data-type="date" data-format-string="DD MMMM YYYY">{{this.dateNaissanceP}}</td>
                                <td>{{this.rueP}}</td>
                                <td>{{this.telDomicileP}}</td>
                                <td>{{this.telPortableP}}</td>
                                <td>{{this.telAutreP}}</td>
                                <td>{{this.emailP}}</td>
                                <td>{{this.previsite}}</td>
                                <td>{{this.fa}}</td>
                                <td>{{this.statut}}</td>


                                <td>
                                    <button onclick="deletePersonne('{{this.idPersonne}}')">Supprimer</button>
                                    <button onclick="updatePersonne('{{this.idPersonne}}')">&Eacute;diter</button>
                                </td>

                            </tr>
                        {{/each}}
                        <script src='javascript/person.js'></script>
                        </tbody>
                    </table>

                </div>
            </div>
            <!-- End of col-sm-12-->
        </div>
        <!-- End of row-->
    </div>
    <!-- End of Container-->
    <hr/>
</section>