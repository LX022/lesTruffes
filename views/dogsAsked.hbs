<!-- End of header-->
<section class="aboutus margin-top-80" id="aboutus">

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="container">
                    <div class="row">
                <div class="col-md-4">
                <h2 style="color:red">{{info}}</h2>
                <!-- End of head title-->
                <div><h2>Ajouter une adoption</h2>
                    <table class="table">
                        <thead>
                        <!-- En-tête du tableau-->
                        <tr>
                            <th scope="col">ID Animal</th>
                            <th scope="col">ID Personne</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>

                        <form id="dogsAsked" action="/dogsAsked" method="post">
                            <tr>
                                <td><input list="InsertidAnimal" name="InsertidAnimal" required></td>
                                <datalist id="InsertidAnimal">
                                    {{#each myDogs}}
                                        <option value="{{this.idAnimal}}">{{this.nomAnimal}}</option>
                                    {{/each}}
                                </datalist>
                                <td><input list="InsertidPerson" name="InsertidPerson" required></td>
                                <datalist id="InsertidPerson">
                                    {{#each personnes}}
                                        <option value="{{this.idPersonne}}">{{this.prenomP}} {{this.nomP}}</option>
                                    {{/each}}
                                </datalist>
                                <td style="vertical-align: center;"><h4><input type="submit" style="background-color:lightgreen"  value="Ajouter"></h4></td>
                            </tr>
                        </form>
                        </tbody>
                    </table>
                </div>
                </div></div>

<br><br>
                    <div>

                        <h2>Adoption(s) en cours</h2>
                        <table class="table">
                            <thead>
                            <!-- En-tête du tableau-->
                            <tr>
                                <th scope="col">ID Animal</th>
                                <th scope="col">ID Personne</th>
                                <th scope="col">Adoption validée</th>
                                <th scope="col">Contrat d'adoption</th>
                                <th scope="col">Date du contrat</th>
                                <th scope="col">Commentaires</th>
                                <th scope="col">Date cession ICAD</th>
                                <th scope="col">Paiement</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>

                            <!-- data-->
                            {{#each dogs}}
                                <form id="dogAskedDelete" action="/dogsAsked" method="post">
                                    <tr>
                                        <input type="hidden" value="{{this.idAnimal}}">
                                        <input type="hidden" value="{{this.idPersonne}}">
                                        <td>{{this.idAnimal}}</td>
                                        <td>{{this.idPersonne}}</td>
                                        <td>{{this.adoptionValidee}}</td>
                                        <td>{{this.contratAdoption}}</td>
                                        <td>{{this.dateContratRecu}}</td>
                                        <td>{{this.commentaires}}</td>
                                        <td>{{this.dateCessionIcad}}</td>
                                        <td>{{this.paiement}}</td>
                                        <td><h4 style="text-align: right;" >  <input style="background:orangered"  type="submit" value="Supprimer"></h4></td>
                                    </tr>
                                </form>
                            {{/each}}
                            </tbody>
                        </table>
                        <br><br>
                        <div>
                            <h2>Modifier une adoption</h2>
                            <table class="table">
                                <thead>
                                <!-- En-tête du tableau-->
                                <tr>
                                    <th scope="col">ID Animal</th>
                                    <th scope="col">ID Personne</th>
                                    <th scope="col">Adoption validée</th>
                                    <th scope="col">Contrat d'adoption</th>
                                    <th scope="col">Date du contrat</th>
                                    <th scope="col">Commentaires</th>
                                    <th scope="col">Date cession ICAD</th>
                                    <th scope="col">Paiement</th>
                                    <th scope="col"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each dogs}}     <form id="updateDogsAsked" action="/dogAsked" method="get">
                                    <tr>
                                        <td><input type="number" name="UidAnimal" value="{{this.idAnimal}}" readonly></td>
                                        <td><input type="number" name="UidPerson" value="{{this.idPersonne}}" readonly></td>
                                        <td><input type="text" name="UadoptionValidee" value="{{this.adoptionValidee}}"></td>
                                        <td><input type="text" name="UcontratAdoption" value="{{this.contratAdoption}}"></td>
                                        <td><input type="date" name="UdateContratRecu" value="{{this.dateContratRecu}}"></td>
                                        <td><input type="text" name="Ucommentaires" value="{{this.commentaires}}"></td>
                                        <td><input type="date" name="UdateCessionIcad" value="{{this.dateCessionIcad}}"></td>
                                        <td><input type="text" name="Upaiement" value="{{this.paiement}}"></td>
                                        <td style="vertical-align: center;"><h4><input type="submit" style="background-color:gold"  value="Mettre à jour"></h4></td>
                                    </tr>
                                </form>
                                {{/each}}

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- End of col-sm-12-->
                </div>
                <!-- End of row-->
            </div>
            <!-- End of Container-->
            <hr/>

</section>
